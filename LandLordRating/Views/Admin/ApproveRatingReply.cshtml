@model LandLordRating.Models.RatingReply

@{
    ViewBag.Title = "Approve Rating Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Approve Rating Reply</h2>

<p>Are you sure you wish to approve the rating following rating reply?</p>

<p>Read the full description: @Model.ReplyDescription</p>

<p>Make sure it is in line with our @Html.ActionLink("community guidelines.", "CommunityGuideLines", "Home")</p>

@Html.ActionLink("Approve This Rating Reply", "ApproveRatingReplyFinal", "Admin", new { id = Model.RatingReplyId}, new { @class = "btn btn-primary btn-lg"})

<br />

@Html.ActionLink("Return to Rating Reply List", "PendingRatingReplies", "Admin")
