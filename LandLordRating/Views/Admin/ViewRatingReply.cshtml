@model LandLordRating.Models.RatingReply

@{
    ViewBag.Title = "View Rating Reply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Rating Reply</h2>

<div>
    <h4>Rating Reply</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Rating.LandLord.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating.LandLord.FullName)
        </dd>

        <dt>
            Reply Description: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReplyDescription)
        </dd>
        <dd>
            Original Rating Text
        </dd>
        <dt>
            @Html.DisplayFor(model => model.Rating.RatingDescription)
        </dt>

    </dl>
</div>
<p>
    @Html.ActionLink("Approve This Rating Reply", "ApproveRatingReply", new { id = Model.RatingReplyId }) |
    @Html.ActionLink("Back to List", "PendingRatings")
</p>
