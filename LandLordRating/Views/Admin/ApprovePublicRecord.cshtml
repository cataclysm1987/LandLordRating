@using LandLordRating.Models
@model LandLordRating.Models.PublicRecord

@{
    ViewBag.Title = "ApprovePublicRecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Approve Public Record</h2>

<div>
    <h4>Are You Sure You Want to Approve This Public Record?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RecordType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecordType)
        </dd>
        @if (Model.RecordType == RecordTypes.Criminal)
        {
            <dt>
                @Html.DisplayNameFor(model => model.CriminalType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CriminalType)
            </dd>
        }
        
        @if (Model.RecordType == RecordTypes.Civil)
        {
            <dt>
                @Html.DisplayNameFor(model => model.CivilType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CivilType)
            </dd>
        }
        
        @if (Model.RecordType == RecordTypes.Domestic)
        {
            <dt>
                @Html.DisplayNameFor(model => model.DomesticType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DomesticType)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.CaseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CaseNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateFiled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateFiled)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CaseURL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaseURL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PlaintiffOrDefendant)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaintiffOrDefendant)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Approve Public Record", "ApprovePublicRecordFinal", new { id = Model.PublicRecordId }) |
    @Html.ActionLink("Back to List", "PendingPublicRecords")
</p>
