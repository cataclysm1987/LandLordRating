@model LandLordRating.Models.RatingReplyViewModel

@{
    ViewBag.Title = "ReplyToRating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reply To Rating</h2>

<h3>Rating Left By @Model.Rating.User.UserName:</h3>

<p>@Model.Rating.RatingDescription</p>

<h3>Fill Our Your Reply Below: </h3>

@using (Html.BeginForm("ReplyToRating", "LandLords", FormMethod.Post,
                                                    new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RatingReply</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RatingReply.ReplyDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.RatingReply.ReplyDescription, new { htmlAttributes = new { @class = "form-control", @style="width: 100%; height: 300px;" } })
                @Html.ValidationMessageFor(model => model.RatingReply.ReplyDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to LandLord Page", "Details", "LandLords", new {id=Model.Rating.LandLordId}, null)
</div>
