@model LandLordRating.Models.LandLordViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View LandLord</h2>

<div>
    <h2>Viewing Reviews For @Html.DisplayFor(model => model.LandLord.FullName)</h2>
    <div class="row">
        <div class="col-md-4">
            <h4>@Html.DisplayNameFor(model => model.LandLord.PhoneNumber)</h4>
            <p>
                @Html.DisplayFor(model => model.LandLord.PhoneNumber)
            </p>
        </div>
        <div class="col-md-4">
            <h4>@Html.DisplayNameFor(model => model.LandLord.City)</h4>
            <p>
                @Html.DisplayFor(model => model.LandLord.City)
            </p>
        </div>
        <div class="col-md-4">
            <h4>
                @Html.DisplayNameFor(model => model.LandLord.State)
            </h4>
            <p>
                @Html.DisplayFor(model => model.LandLord.State)
            </p>
        </div>
    </div>
    @if (Model.Ratings.Count == 0)
    {
        @Html.Raw("<h4>There are no ratings for this landlord yet, be the first to ")
        @Html.ActionLink("Leave a Rating", "CreateRating", new { id = Model.LandLord.LandLordId })
        @Html.Raw(".</h4>")
    }
    @foreach (var rating in Model.Ratings)
    {
        @Html.Raw("<div class=\"panel panel-default\">")
        @Html.Raw("<div class=\"panel-body\">")
        @Html.Raw("</div>")
        @Html.Raw("</div>")
    }
</div>
<p>
    @*No Need to let users edit land lord info
    @Html.ActionLink("Edit", "Edit", new { id = Model.LandLordId }) |*@
    @Html.ActionLink("Back to List", "Index", "LandLords", new { @class = "btn btn-primary" })
</p>
