@{
    ViewBag.Title = "Home Page";
}
<div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <div class="item active">
            <img src='@Url.Content("~/Content/img/slider1.jpg")' class="img-responsive" style="min-width: 100%">
            <div class="container">
                <div class="carousel-caption" style="background: rgba(0,0,0,0.7);">
                    <p class="lead">Landlord Watch helps renters keep their landlord accountable and lets new tennats look up renters past experiences before signing a lease.</p>
                    @Html.ActionLink("Search for Landlords", "Index", "LandLords", null, new { role = "button", @class = "btn btn-primary btn-lg" })
                </div>
            </div>
        </div>
        <div class="item">
            <img src='@Url.Content("~/Content/img/slider2.jpg")' class="img-responsive" style="min-width: 100%">
            <div class="container">
                <div class="carousel-caption" style="background: rgba(0,0,0,0.7);">
                    <p class="lead">Are you thinking of renting somewhere?  See what others are saying about your property before you sign a lease.</p>
                    @Html.ActionLink("Search for Properties", "Index", "LandLords", null, new { role = "button", @class = "btn btn-primary btn-lg" })
                </div>
            </div>
        </div>
        <div class="item">
            <img src='@Url.Content("~/Content/img/slider3.jpg")' class="img-responsive" style="min-width: 100%">
            <div class="container">
                <div class="carousel-caption" style="background: rgba(0,0,0,0.7);">
                    @if (Request.IsAuthenticated)
                    {
                        <p class="lead">View your past reviews, make changes, or verify your reviews for maximum imapact.</p>
                        @Html.ActionLink("View Your Ratigns", "ViewUserRatings", "LandLords", null, new { @class = "btn btn-primary btn-lg" })
                    }
                    else
                    {
                        <p class="lead">Sign up for a free account and begin rating your landlords</p>
                        @Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg", role = "button", id = "registerLink" })
                    }
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div><!-- /.carousel -->

